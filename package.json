{
  "name": "cute_launcher",
  "version": "1.0.0",
  "description": "cute_launcher",
  "main": "main.js",
  "build": {
    "productName": "cute_launcher",
    "appId": "com.gameguo.cutelauncher",
    "copyright": "gameguo",
    "compression": "store",
    "asar": false,
    "directories": {
      "output": "build"
    },
    "extraResources": [
      {
        "from": "./README.md",
        "to": "./README.md"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "app.ico",
      "extraResources": [
        {
          "from": "./README.md",
          "to": "./README.md"
        }
      ],
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./app.ico",
      "uninstallerIcon": "./app.ico",
      "installerHeaderIcon": "./app.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cute Launcher"
    }
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gameguo/electron_launcher.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gameguo/electron_launcher/issues"
  },
  "homepage": "https://github.com/gameguo/electron_launcher#readme",
  "devDependencies": {
    "electron": "^10.1.3"
  }
}
